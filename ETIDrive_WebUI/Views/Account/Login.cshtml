@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login_wrapper">
    <div class="login_main">
        <form asp-controller="account" asp-action="login" method="post">
            <div class="login_panel">
                <div class="login_form">
                    <h2 class="login_header">Login</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <label class="login_label mt-2">Username</label>
                    <input class="login_input" asp-for="UserName" placeholder="Username" />
                    <span asp-validation-for="UserName" class="span-validation login_validation"></span>

                    <label class="login_label">Password</label>
                    <input class="login_input" asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" class="span-validation login_validation"></span>
                    
                    <input type="submit" value="Sign-in" class="login_button my-3" />
                </div>
            </div>
        </form>
    </div>
</div>