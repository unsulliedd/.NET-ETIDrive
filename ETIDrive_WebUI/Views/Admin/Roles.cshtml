@model List<IdentityRole>

<h2>Roles</h2>
<a asp-controller="Admin" asp-action="CreateRole" class="btn btn-primary">Create Role</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id">Edit</a> |
                    <a class="delete-link" onclick="showDeleteModal('@role.Name', '/Admin/DeleteRole/@role.Id')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal delete-modal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Role</h5>
                <button type="button" class="close_button close-button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete role <span id="roleNameToDelete"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>